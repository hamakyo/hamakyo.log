---
import BaseLayout from "@/layouts/Base";
import PostPreview from "@/components/blog/PostPreviewB";
import SocialMediaLinks from "@/components/SocialMediaLinks";
import { getAllPosts, sortMDByDate, sortMDByPinned } from "@/utils";
import type { CollectionEntry } from "astro:content";

const MAX_POSTS = 10;
const allPosts = await getAllPosts();
const allPostsByDate = sortMDByDate(allPosts);
const allPostsByPinned = sortMDByPinned(allPostsByDate);
const posts = allPostsByPinned.slice(0, MAX_POSTS);

const tech: Array<{ title: string; desc: string; href: string }> = [
  {
    title: "Astro",
    desc: "高速なウェブサイトをより速く構築",
    href: "https://astro.build",
  },
  {
    title: "Astro Assets",
    desc: "最適化されたアセットサポート",
    href: "https://docs.astro.build/en/guides/assets/",
  },
  {
    title: "Tailwind CSS",
    desc: "HTMLから離れることなく、モダンなウェブサイトを迅速に構築",
    href: "https://tailwindcss.com",
  },
  {
    title: "Markdown",
    desc: "シンプルで使いやすいマークアップ言語",
    href: "https://www.markdownguide.org/",
  },
  {
    title: "MDX",
    desc: "コンポーネント時代のMarkdown",
    href: "https://mdxjs.com/",
  },
  {
    title: "Astro Icon",
    desc: "Astro用の使いやすいアイコンコンポーネント",
    href: "https://github.com/natemoo-re/astro-icon#readme",
  },
];
---

<BaseLayout title="Home">
  <section>
    <h1 class="title">Kyoshiro Hama</h1>
    <p class="mb-4 sm:mb-8">
      大阪で社内SEをしています。業務外活動としてはWebアプリ・Webサイトの構築やAIツールの検証等。
    </p>
    <div>
      <span>SNS: </span>
      <SocialMediaLinks />
    </div>
  </section>

  <section class="mt-8 sm:mt-16">
    <h2 class="title">記事一覧</h2>
    <ul class="space-y-4 sm:space-y-2">
      {posts.map((p) => <PostPreview post={p as CollectionEntry<"blog">} />)}
    </ul>
  </section>

  <section class="mt-16">
    <h2 class="title">使用技術</h2>
    <ul class="space-y-1">
      {
        tech.map(({ href, title }) => (
          <li>
            - <a
              href={href}
              target="_blank"
              rel="noopener noreferrer"
              class="cody-link"
            >
              {title}
            </a>
          </li>
        ))
      }
    </ul>
  </section>
</BaseLayout>
